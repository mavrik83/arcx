// tsconfig.json
{
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    // Speeds up compilation; recommended best practice:
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
